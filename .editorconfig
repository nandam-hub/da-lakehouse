# ==============================================================================
# EditorConfig - Consistent Coding Styles Across Editors and IDEs
# ==============================================================================
# This file configures editor behavior for consistent formatting across:
#   - VS Code, PyCharm, IntelliJ, Sublime, Vim, Emacs, and more
#
# References:
#   - https://editorconfig.org/
#   - https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
# ==============================================================================

# Top-most EditorConfig file
root = true

# ==============================================================================
# Default Settings (All Files)
# ==============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ==============================================================================
# Python
# ==============================================================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.pyi]
indent_style = space
indent_size = 4

# ==============================================================================
# Configuration Files
# ==============================================================================

# YAML (Databricks bundles, GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# TOML (pyproject.toml)
[*.toml]
indent_style = space
indent_size = 2

# Terraform
[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

# ==============================================================================
# Shell Scripts
# ==============================================================================
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# ==============================================================================
# Documentation
# ==============================================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Allow trailing spaces for Markdown line breaks

[*.rst]
indent_style = space
indent_size = 3

# ==============================================================================
# Windows-Specific Files
# ==============================================================================
[*.{bat,cmd}]
end_of_line = crlf

[*.ps1]
indent_style = space
indent_size = 4
end_of_line = lf  # PowerShell Core supports LF

# ==============================================================================
# Data Files
# ==============================================================================
[*.{csv,tsv}]
insert_final_newline = false

# ==============================================================================
# Makefiles (require tabs)
# ==============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab
